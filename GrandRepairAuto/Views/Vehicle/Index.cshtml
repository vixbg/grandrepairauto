@model List<GrandRepairAuto.Web.Models.VehicleVM>


<section id="vehicles" class="vehicles">

    <h1>Vehicles</h1>

    <table id="vehicleDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Reg. Plate</th>
                <th>Make</th>
                <th>Vehicle Model</th>
                <th>VIN</th>
                <th>Vehicle Type</th>
                <th>Engine Type</th>
                <th>Mileage</th>
                <th>Color</th>
                <th>Owner</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model)
            {
                <tr>
                    <td> <a href="#"> @vehicle.RegPlate </a> </td>
                    <td> @vehicle.Manufacturer </td>
                    <td> @vehicle.VehicleModel </td>
                    <td> @vehicle.Vin </td>
                    <td> @vehicle.VehicleType </td>
                    <td> @vehicle.EngineType </td>
                    <td> @vehicle.Mileage </td>
                    <td> @vehicle.Color </td>
                    <td> @vehicle.Owner </td>
                    <td> <a asp-action="Update" asp-route-id="@vehicle.Id"> Update </a></td>
                    <td> <a asp-action="Delete" asp-route-id="@vehicle.Id"> Delete </a></td>


                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-primary" style="margin-top: 10px; margin-bottom: 10px" asp-action="Create">Create vehicle</a>

</section>

@section Scripts
{
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#vehicleDatatable').dataTable();
        });
    </script>
}


