@model List<GrandRepairAuto.Web.Models.UserVM>

<section id="users" class="users">

    <h1>Users</h1>

    <table id="usersTable" class="table table-striped table-bordered dt-responsive nowrap">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email/Username</th>
                <th>Phone Number</th>
                <th>Roles</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td> <img src="@Html.AvatarUrlForEmail(user.Email, 30)" style="border-radius: 50%" /> @user.FirstName @user.LastName </td>
                    <td> @user.Email </td>
                    <td> @user.PhoneNumber </td>
                    <td> @user.RolesString </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@user.Id"><i style="font-size: x-large" class='bx bx-edit'></i> </a>
                        <a class="click-warn" asp-action="Delete" asp-route-id="@user.Id"> <i style="font-size: x-large" class='bx bx-trash'></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-primary" asp-action="Create">Create user</a>
</section>

@section Head  {
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

@section Scripts
{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.searchTable').dataTable();
        });
    </script>
}