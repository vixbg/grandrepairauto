@model GrandRepairAuto.Web.Models.PasswordResetVM

@if (ViewBag.EmailSent)
{
    <section>
        <div class="container">
            <div class="alert alert-success">
                A link to reset your password has been sent to your email.
            </div>
        </div>
    </section>
}
else
{
    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card card-signin my-5">
                        <div class="card-body">
                            <h5 class="card-title text-center" style="color: #1bac91">Sign In</h5>
                            <form method="POST" class="form-signin">
                                <div class="form-label-group">
                                    <input asp-for="Email" type="email" id="Email" class="form-control" placeholder="Email" required>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <label asp-for="Email">Email</label>
                                </div>

                                <div class="alert alert-danger" role="alert" id="alert" style="display: none">@Html.ValidationSummary()</div>
                                <button class="btn btn-lg btn-block text-uppercase" style="background: #1bac91" type="submit">Reset Password</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}