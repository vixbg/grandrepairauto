@model GrandRepairAuto.Web.Models.LoginInputModel
<main id="main">
    <!-- ======= Services Section ======= -->
    <section id="login" class="section-bg">
        <div class="container">

            <div class="section-title">
                <h2>Login</h2>
            </div>
            
            <form asp-route="Login">
                <input type="hidden" asp-for="ReturnUrl" />
                <div class="form-group">
                    <label class="small" asp-for="Username">Email</label>
                    <span asp-validation-for="Username" class="text-danger"></span>
                    <input asp-for="Username" type="email" class="form-control rounded" id="Username" placeholder="Enter email" />
                </div>
                <div class="form-group">
                    <label class="small" asp-for="Password">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input asp-for="Password" type="password" class="form-control rounded" id="Password" placeholder="Password" />
                </div>
                
                <div class="alert alert-danger" role="alert" id="alert" style="display: none">@Html.ValidationSummary()</div>

                <button name="button" class="btn rounded">Sign in</button>
            </form>
        </div>
    </section><!-- End Services Section -->
</main>

@if (!ViewData.ModelState.IsValid)
{
    <script type="text/javascript">
        document.getElementById("alert").style.display = 'block';
    </script>
}