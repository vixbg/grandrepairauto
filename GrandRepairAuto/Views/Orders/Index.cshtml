@model List<GrandRepairAuto.Web.Models.OrderVM>
@using GrandRepairAuto.Data.Enums


<section id="orders" class="order">

    <h1>Orders</h1>

    <table id="ordersTable" class="table table-striped table-bordered dt-responsive nowrap table-hover" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Order #</th>
                <th>Status</th>
                <th>Date</th>
                <th>Customer</th>
                <th>Vehicle</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>
                        <a style="font-weight: bold" asp-controller="Orders"
                           asp-action="Details"
                           asp-route-id="@order.Id">Order @order.Id</a>
                    </td>
                    <td>@order.Status.ToString()</td>
                    <td>@order.Date.ToShortDateString()</td>
                    <td>@order.UserFullName</td>
                    <td>@order.VehicleRegPlate</td>
                    <td>
                        <a class="click-warn" asp-action="Delete" asp-route-id="@order.Id"><i style="font-size: x-large" class='bx bx-trash'></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (User.IsInRole(Roles.Employee))
    {
        <a class="btn btn-primary" style="margin-top: 10px; margin-bottom: 10px" asp-action="Create">Create order</a>
    }


</section>

@section Scripts
{
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet"/>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#ordersTable').dataTable({
                "autoWidth": true
            });
        });
    </script>
}

