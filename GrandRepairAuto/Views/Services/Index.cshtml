@model List<GrandRepairAuto.Web.Models.ServiceVM>

<section>
    <h1>Services</h1>

    <table id="serviceDatatable" class="table table-striped table-bordered dt-responsive nowrap datatable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Service</th>
                <th>Price per hour</th>
                <th>Work hours</th>
                <th>Vehicle type</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <td> @service.Name </td>
                    <td> @service.PricePerHour @service.Currency </td>
                    <td> @service.WorkHours h </td>
                    <td> @service.VehicleType.ToString() </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@service.Id"> <i style="font-size: x-large" class='bx bx-edit'></i> </a>
                        <a class="delete-warn" asp-action="Delete" asp-route-id="@service.Id"> <i style="font-size: x-large" class='bx bx-trash'></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-primary" asp-action="Create">Create service</a>

</section>
